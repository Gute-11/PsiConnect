@model PsiConnect.ViewModels.LoginViewModel

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link rel="stylesheet" href="~/css/login.css" asp-append-version="true">
</head>
<body>
    <section>
        <div class="form-box">
            <div class="form-value">
                <form asp-controller="Account" asp-action="Login" method="post">
                    <h2>Login</h2>
                    <div asp-validation-summary="All" class="text-danger"></div>
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="ReturnUrl" />

                    <div class="inputbox">
                        <ion-icon name="mail-outline"></ion-icon>
                        <input asp-for="Email_u" type="email" required>
                        <label for="Email_u">Email</label>
                        <span asp-validation-for="Email_u" class="text-danger"></span>
                    </div>
                    <div class="inputbox">
                        <ion-icon name="lock-closed-outline"></ion-icon>
                        <input asp-for="Senha_u" type="password" required>
                        <label for="Senha_u">Senha</label>
                        <span asp-validation-for="Senha_u" class="text-danger"></span>
                    </div>
                    <div class="forget">
                        <label for=""><a asp-controller="Account" asp-action="ForgotPassword">Esqueceu a senha</a></label>
                    </div>
                    <button type="submit">Entrar</button>
                    <div class="register">
                        <p>
                            Não tenho conta <a asp-controller="Account" asp-action="Cadastro_Usuario">Cadastre-se</a>
                        </p>
                    </div>
                    <div class="register">
                        <p>
                            Sou psicólogo: <a asp-controller="Account" asp-action="CadastroPsicologo">clique aqui</a>
                        </p>
                    </div>
                </form>
            </div>
        </div>
    </section>
    <script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>
</body>
</html>
