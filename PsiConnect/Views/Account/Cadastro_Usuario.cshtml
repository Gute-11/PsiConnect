@model PsiConnect.ViewModels.CadastroUsuarioViewModel

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cadastro</title>
    <link rel="stylesheet" href="~/css/Tela_Cad.css" asp-append-version="true">
</head>
<body>
    <div class="container">
        <div class="form-img">
            <img src="~/imagens/Login.gif" alt="Imagem animada">
        </div>
        <div class="form">
            <form asp-controller="Account" asp-action="Cadastro_Usuario" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                @Html.AntiForgeryToken()
                <div class="form-header">
                    <div class="title">
                        <h1>Cadastre-se</h1>
                    </div>
                    <div class="login-button">
                        <button><a asp-controller="Account" asp-action="CadastroPsicologo">Psicólogos</a></button>
                    </div>
                </div>

                <div class="input-group">
                    <div class="input-box">
                        <label asp-for="Primeiro_nome_u"></label>
                        <input asp-for="Primeiro_nome_u" class="form-control" />
                        <span asp-validation-for="Primeiro_nome_u" class="text-danger"></span>
                    </div>

                    <div class="input-box">
                        <label asp-for="Sobrenome_u"></label>
                        <input asp-for="Sobrenome_u" class="form-control" />
                        <span asp-validation-for="Sobrenome_u" class="text-danger"></span>
                    </div>

                    <div class="input-box">
                        <label asp-for="Cpf_u"></label>
                        <input asp-for="Cpf_u" class="form-control" />
                        <span asp-validation-for="Cpf_u" class="text-danger"></span>
                    </div>

                    <div class="input-box">
                        <label asp-for="Email_u"></label>
                        <input asp-for="Email_u" class="form-control" />
                        <span asp-validation-for="Email_u" class="text-danger"></span>
                    </div>

                    <div class="input-box">
                        <label asp-for="Celular_u"></label>
                        <input asp-for="Celular_u" class="form-control" />
                        <span asp-validation-for="Celular_u" class="text-danger"></span>
                    </div>

                    <div class="input-box">
                        <label asp-for="Ctt_emer_u"></label>
                        <input asp-for="Ctt_emer_u" class="form-control" />
                        <span asp-validation-for="Ctt_emer_u" class="text-danger"></span>
                    </div>

                    <div class="input-box">
                        <label asp-for="Senha_u"></label>
                        <input asp-for="Senha_u" class="form-control" />
                        <span asp-validation-for="Senha_u" class="text-danger"></span>
                    </div>

                    <div class="input-box">
                        <label asp-for="ConfirmeSenha"></label>
                        <input asp-for="ConfirmeSenha" class="form-control" />
                        <span asp-validation-for="ConfirmeSenha" class="text-danger"></span>
                    </div>
                </div>
                <!--tentando resolver problema do git-->
                <div class="gender-inputs">
                    <div class="gender-title">
                        <h6>Gênero</h6>
                    </div>
                    <div class="gender-group">
                        <div class="gender-input">
                            <input asp-for="Genero_u" type="radio" id="female" name="Genero_u" value="Feminino">
                            <label for="female">Feminino</label>
                        </div>

                        <div class="gender-input">
                            <input asp-for="Genero_u" type="radio" id="male" name="Genero_u" value="Masculino">
                            <label for="male">Masculino</label>
                        </div>

                        <div class="gender-input">
                            <input asp-for="Genero_u" type="radio" id="other" name="Genero_u" value="Outros">
                            <label for="other">Outros</label>
                        </div>

                        <div class="gender-input">
                            <input asp-for="Genero_u" type="radio" id="not-say" name="Genero_u" value="Prefiro não falar">
                            <label for="not-say">Prefiro não falar</label>
                        </div>
                    </div>
                </div>

                <div class="continue-button">
                    <button type="submit">Continuar</button>
                </div>
            </form>
        </div>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>