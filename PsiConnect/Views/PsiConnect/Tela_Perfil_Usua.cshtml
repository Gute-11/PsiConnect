@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Perfil do Usário</title>
    <link rel="stylesheet" href="~/css/PerfilUsua.css" asp-append-version="true">
</head>
<body>
    <header>
        <div class="profile">
            <img id="profile-picture" src="default-profile-pic.jpg" alt="Foto de Perfil">
            <div class="button-container">
                <button id="change-picture-btn">Mudar Foto</button>
                <button id="edit-picture-btn">Alterar Foto de Perfil</button>
            </div>
            <h1> @User.Identity.Name &nbsp; </h1>
        </div>
    </header>

    <section id="consultation-hours">
        <h2>Minhas Consultas</h2>
        <ul id="consultation-list">
        </ul>
        <button id="add-consultation-btn">Adicionar Horário</button>
    </section>

    <section id="user-profiles">
        <h2>Meu Psicólogo</h2>
        <div class="user-card">
            <img src="~/imagens/khris.jpg" alt="Foto do Usuário">
            <h3>Khristhyan Henrique</h3>
            <p>Estou lhe aguardando para a consulta 🤗!</p>
        </div>

    </section>


    <input type="file" id="file-input" style="display: none;">

    <script src="js-usuario/script-usuario.js"></script>
</body>
</html>
